
/**
 * 16-bit Conditional Negative:
 * for i=0..15: out[i] = not in[i] if sel else in[i]
 */

CHIP CondNeg16 {
    IN in[16], sel;
    OUT out[16];

    PARTS:

    /* Xor16 in[i], sel, out[i] */
    Not16(in = in, out = notin);
    Mux16(a = in, b = notin, sel = sel, out = out);

}
